<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nebula.rbac.admin.mapper.SysRoleMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.nebula.rbac.admin.model.entity.SysRole">
		<id column="role_id" property="roleId" />
		<result column="role_name" property="roleName" />
		<result column="role_code" property="roleCode" />
		<result column="role_desc" property="roleDesc" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="del_flag" property="delFlag" />
	</resultMap>

	<!--roleDto-->
	<resultMap id="RoleVoMap" type="com.nebula.rbac.admin.model.dto.RoleDTO">
		<id column="role_id" property="roleId" />
		<result column="role_name" property="roleName" />
		<result column="role_code" property="roleCode" />
		<result column="role_desc" property="roleDesc" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="del_flag" property="delFlag" />
		<result column="dept_id" property="roleDeptId"/>
		<result column="dept_name" property="roleDeptName"/>
	</resultMap>

	<select id="selectPageVo" resultMap="RoleVoMap">
		SELECT
			r.*,
			d.dept_id AS dept_id,
			d.`name` AS dept_name
		FROM
			sys_role r
		LEFT JOIN sys_role_dept rd ON rd.role_id = r.role_id
		LEFT JOIN sys_dept d ON rd.dept_id = d.dept_id
		WHERE r.del_flag = 0
        <if test="roleName != null and roleName != ''">
            and instr(r.role_name, #{roleName}) > 0
        </if>
		ORDER BY r.role_id ASC
	</select>

	<select id="selectListByDeptId" resultMap="BaseResultMap">
		SELECT
			r.role_id,
			r.role_name,
			r.role_code,
			r.role_desc,
			r.create_time,
			r.update_time,
			r.del_flag
		FROM sys_role r LEFT OUTER JOIN sys_role_dept rd ON rd.role_id = r.role_id
		WHERE rd.dept_id = #{deptId}
	</select>
</mapper>
